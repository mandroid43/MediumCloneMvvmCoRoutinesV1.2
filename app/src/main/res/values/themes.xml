<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MediumCloneMvvmCoRoutinesV11" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BaseInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/standardInputLayoutCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/standardInputLayoutCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/standardInputLayoutCornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/standardInputLayoutCornerRadius</item>
        <item name="boxBackgroundColor">@color/colorBackGround</item>
        <item name="boxStrokeColor">@color/design_default_color_primary_dark</item>
        <item name="helperTextTextColor">@color/colorRed</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="hintEnabled">true</item>
        <item name="startIconDrawable">@null</item>
        <item name="endIconDrawable">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="BaseEtTheme">
        <item name="android:maxLength">50</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryButtonTheme">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryInputLayoutTheme" parent="BaseInputLayoutTheme"></style>

    <style name="PrimaryEtTheme" parent="BaseEtTheme"></style>

    <style name="ArticlesDetailsInputLayoutTheme" parent="BaseInputLayoutTheme">
        <item name="android:textColorHint">@color/purple_500</item>
        <item name="android:enabled">false</item>
    </style>

</resources>